{
    "manifest_version" : 2,

    "name"             : "Radio 24 Downloader",

    "version"          : "1.1",

    "icons"           : {
        "128" : "images/img.png"
    },

    "content_scripts" : [
        {
            "matches" : [ "*://*/*" ],
            "js"      : [ "content.js" ]
        }
    ],

    "background"      : {
        "scripts" : ["background.js"]
    },

    "permissions"     : [
        "http://radio24.ua/*",
        "downloads",
        "tabs"
    ],

    "browser_action" : {
        "default_title" : "Radio 24 Downloader",
        "default_icon"  : "images/img.png",
        "default_popup" : "popup.html"
    }

}